get-dashboard-aside-side(action, side)
  &.{action}-{side}
    & > .x-dashboard-container
      & > .x-dashboard-aside
        &.x-aside-{side}
          block

create-dashboard()
  height 100%
  width 100%
  +get-dashboard-aside-side(fold, left)
    +respond(tiny)
      create-dashboard-aside-xs()
    +respond(small)
      create-dashboard-aside-sm()
    +respond(medium)
      create-dashboard-aside-md()
    +respond(large)
      create-dashboard-aside-lg()
    +respond(huge)
      create-dashboard-aside-xl()

    .toggle-toolbar-left
      i.ox-icon
        -webkit-transform: rotate(90deg)
        -ms-transform: rotate(90deg)
        transform: rotate(90deg)

  +get-dashboard-aside-side(fold, right)
    +respond(tiny)
      create-dashboard-aside-xs()
    +respond(small)
      create-dashboard-aside-sm()
    +respond(medium)
      create-dashboard-aside-md()
    +respond(large)
      create-dashboard-aside-lg()
    +respond(huge)
      create-dashboard-aside-xl()

    .toggle-toolbar-right
      i.ox-icon
        -webkit-transform: rotate(90deg)
        -ms-transform: rotate(90deg)
        transform: rotate(90deg)


