toolbar-left-right-defaults()
  position fixed
  height 100%
  width 0px
  top 100px
  shaodw(3)

left-toolbar-default()
  toolbar-left-right-defaults()
  left 0

right-toolbar-default()
  toolbar-left-right-defaults()
  right 0

left-tools-default()
  font-size 18px
  width 100%
  display block
  position relative
  overflow hidden
  text-align center

right-tools-default()
  font-size 18px
  display block
  position relative
  overflow hidden
  text-align center


left-tools-default-animation()
  animation toggleTools-back-mobile 400ms
  -webkit-animation toggleTools-back-mobile 400ms
  animation-fill-mode forwards
  -webkit-animation-fill-mode forwards


tool-title-default()
  opacity 0
  position absolute
  display block
  top 30%
  min-width 40px

ox-toolbar-size-xs(show= false)
  top ox-toolbar-top-xs
  width ox-toolbar-width-xs

ox-toolbar-size-sm(show= false)
  top ox-toolbar-top-sm
  width ox-toolbar-width-sm

ox-toolbar-size-md(show= false)
  top ox-toolbar-top-md
  width ox-toolbar-width-md

ox-toolbar-size-lg(show= false)
  top ox-toolbar-top-lg
  width ox-toolbar-width-lg


ox-toolbar-close-media()
  +respond(tiny)
    ox-toolbar-size-xs()
  +respond(small)
    ox-toolbar-size-sm()
  +respond(medium)
    ox-toolbar-size-md()
  +respond(large)
    ox-toolbar-size-lg()

ox-toolbar-open-media()
  +respond(tiny)
    width ox-toolbar-open-width
  +respond(small)
    width ox-toolbar-open-width
  +respond(medium)
    width ox-toolbar-open-width
  +respond(large)
    width ox-toolbar-open-width

ox-tool-media()
  +respond(tiny)
    min-width ox-toolbar-width-xs
  +respond(small)
    min-width ox-toolbar-width-sm
  +respond(medium)
    min-width ox-toolbar-width-md
  +respond(large)
    min-width ox-toolbar-width-lg
    font-size 22px

ox-tool-open-animation(side)
  if side is left
    animation toggleTools 300ms
    -webkit-animation toggleTools 300ms
    animation-fill-mode forwards
    -webkit-animation-fill-mode forwards
  else if side is right
    animation toggleTools-right 300ms
    -webkit-animation toggleTools-right 300ms
    animation-fill-mode forwards
    -webkit-animation-fill-mode forwards
ox-tool-title-open-animation()
  animation ox-tool-title-show 300ms
  -webkit-animation ox-tool-title-show 300ms
  animation-fill-mode forwards
  -webkit-animation-fill-mode forwards


.ox-toolbar
  &.ox-toolbar-left
    animation animate-content-back 300ms
    -webkit-animation animate-content-back 300ms
    animation-fill-mode forwards
    -webkit-animation-fill-mode forwards
    // Default Styles for ox-toolbar-left
    left-toolbar-default()
    // Default Media for ox-toolbar-left closed
    ox-toolbar-close-media()

    .tool
      // default styles for tools in ox-toolbar-left
      left-tools-default()
      // default Media for tools in ox-toolbar-left
      ox-tool-media()

      .title
        // set the default styles for the tools title
        tool-title-default()
        text-align right

  &.ox-toolbar-right
    // Default Styles for ox-toolbar-right
    right-toolbar-default()
    // Default Media for ox-toolbar-right closed
    ox-toolbar-close-media()



    .tool
      // default styles for tools in ox-toolbar-left
      right-tools-default()
      // default Media for tools in ox-toolbar-left
      ox-tool-media()

      .title
        // set the default styles for the tools title
        tool-title-default()
        text-align left

.has-ox-toolbar-left

  .dashboard-content
    width 100%
    +respond(small)
      width calc(100% - 50px)
      left 50px
    +respond(large)
      width calc(100% - 60px)
      left 60px

.has-ox-toolbar-right

  .dashboard-content
    width 100%
    +respond(small)
      width calc(100% - 50px)
      right 50px
    +respond(large)
      width calc(100% - 60px)
      right 60px

.has-ox-toolbar-right.has-ox-toolbar-left

  .dashboard-content
    // dashboard-content-media(false, false, true, false, false, false)
    width 100%
    +respond(small)
      width calc(100% - 100px)
      left 50px
    +respond(large)
      width calc(100% - 120px)
      left 60px

.show-toolbar-left // Show Tool Bar =======
  .toggle-toolbar-left
    i.ox-icon
      -webkit-transform: rotate(90deg)
      -ms-transform: rotate(90deg)
      transform: rotate(90deg)

  .ox-toolbar-left
    width 250px

    .tool
      // Sets animation toggleTools
      ox-tool-open-animation(left)
      text-align left

      .ox-icon
        font-size 18px

      .title
        // Sets animation ox-tool-title-show
        ox-tool-title-open-animation()
        // Move title over 20%
        right 20%


  .dashboard-content
    // Sets Width to 100% - 250px
    width calc(100% - 250px)
    left 250px

  &.has-ox-toolbar-right

    .dashboard-content
      width calc(100% - 250px)

      +respond(small)
        width calc(100% - 300px)
      +respond(large)
        width calc(100% - 310px)

.show-toolbar-right
  .toggle-toolbar-right
    i.ox-icon
      -webkit-transform: rotate(90deg)
      -ms-transform: rotate(90deg)
      transform: rotate(90deg)

  .ox-toolbar-right
    width 250px

    .tool
      ox-tool-open-animation(right)
      text-align right

      .ox-icon
        font-size 18px

      .title
        // Sets animation ox-tool-title-show
        ox-tool-title-open-animation()
        // Move title over 20%
        left 20%


  .dashboard-content
    width calc(100% - 250px)
    right 250px


  &.has-ox-toolbar-left

    .dashboard-content
      width calc(100% - 250px)
      +respond(small)
        width calc(100% - 300px)
        right 300px
      +respond(large)
        width calc(100% - 310px)
        right 310px



.show-toolbar-right.show-toolbar-left

  .dashboard-content
    width 0px
    +respond(small)
      width calc(100% - 500px)
      left 250px
      right 250px



@keyframes ox-tool-title-show
  0%
    opacity 0

  80%
    opacity .5

  100%
    opacity 1



@keyframes ox-toggle-toolbar-left
  0%
    animate-toggle-toolbar-left(0)
  100%
    animate-toggle-toolbar-left(100)
@keyframes ox-toggle-toolbar-left-back

  0%
    animate-toggle-toolbar-left(100)
  100%
    animate-toggle-toolbar-left(0)

@keyframes toggleTools-mobile
  0%
    animate-toggleTools(0, true)

  100%
    animate-toggleTools(100, true)

@keyframes toggleTools-back-mobile
  0%
    animate-toggleTools(100, true)

  100%
    animate-toggleTools(0, true)

@keyframes toggleTools
  0%
    animate-toggleTools(0, false)

  100%
    animate-toggleTools(100, false)


@keyframes toggleTools-back
  0%
    animate-toggleTools(100, false)

  100%
    animate-toggleTools(0, false)

@keyframes toggleTools-right
  0%
    animate-toggleTools(0, false, true)

  100%
    animate-toggleTools(100, false, true)
@keyframes toggleTools-right-back
  0%
    animate-toggleTools(100, false, true)

  100%
    animate-toggleTools(0, false, true)

@keyframes ox-toggle-content-left
  0%
    // animate-toggle-content-left(0)

  100%
    animate-toggle-content-left(100)

@keyframes ox-toggle-content-left-back
  0%
    animate-toggle-content-left(100)
  100%
    animate-toggle-content-left(0)


@keyframes ox-toggle-view-left
  0%
    animate-toggle-view-left(0)
  100%
    animate-toggle-view-left(100)


@keyframes ox-toggle-view-left-back
  0%
    animate-toggle-view-left(100)
  100%
    animate-toggle-view-left(0)

