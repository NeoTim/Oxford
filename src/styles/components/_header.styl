.flex-header
  flex-container()
  flex-wrap(nowrap)
  flex-element(0 0 $header-height)
  flex-direction(row)
  flex-order(-1)
  z-index 4010
  position relative
  use-gutters()

  &.sub-header
    z-index 4009

  &.header-medium
    flex-element(0 0 $header-height)
  &.header-medium
    flex-element(0 0 $header-height-medium)
  &.header-large
    flex-element(0 0 $header-height-large)
  &.header-huge
    flex-element(0 0 $header-height-huge)

.flex-header
  .brand
    font-size 20px
    font-weight bold


