.flex-card
  flex-container()
  flex-direction(column)
  flex-element(1)
  margin-bottom 10px
  padding none
  border none


  background-color white
  box-shadow($box-shadow-small)
  border-radius($border-radius-small)

  > .card-heading
    flex-container()
    flex-direction(row)
    flex-element(1)
    align-content(center)
    font-size 15px
    padding 10px
    color $color-grey
    border-bottom 1px solid $color-grey-100

  > .card-body
    padding 10px

  > .card-footer
    padding 10px
    border-top 1px solid $color-grey-100


