flex-default-row()
  box-sizing(border-box)

  flex-container()
  flex-direction(row)
  flex-wrap(wrap)
  flex-align-items(flex-start)
  flex-align-content(flex-start)
  flex-justify-content(flex-start)
  -webkit-flex-flow: row wrap;
  flex-flow: row wrap;

flex-default-column()
  box-sizing(border-box)
  flex-container()
  flex-direction(column)
  flex-align-items(flex-start)
  flex-align-content(flex-start)
  flex-justify-content(flex-start)
