.flex-container
  height 100%
  width 100%
  flex-default-column()


  & > *
    flex-element(1 0 auto)

  & > nav
    // height 50px
    background red
    background-color red

  & > header
    flex-element(0 1 auto)
    flex-align-self(stretch)
    flex-default-row()
    // max-height 64px;
    background lightblue
    background-color lightblue
    padding 10px

    & > nav
      flex-element(0 1 auto)
      flex-align-self(stretch)
      width 100%
      max-height 44px
      height 44px
      background-color green


  & > section
    flex-element(1 1 auto)
    flex-align-self(stretch)
    flex-default-row()
    width 100%
    background grey

    .section
      flex-element(1 1 auto)
      flex-align-self(stretch)
      flex-default-row()
      width 100%
      background-color white

      & > aside
        flex-element(2 1 auto)
        flex-align-self(stretch)
        box-sizing(border-box)
        flex-container()
        flex-direction(column)
        flex-align-items(flex-start)
        flex-align-content(flex-start)
        flex-justify-content(flex-start)

        background-color pink
        max-width 250px
        min-width 250px
        // min-height 100%
        padding 10px

        & > *
          flex-element(1 0 auto)
          flex-align-self(stretch)
          width 100%
          min-width 100%

        & > header
          flex-align-self(flex-start)
          flex-default-row()
          min-height 64px
          max-height 64px
          background-color lightblue
          background lightblue

        & > section
          flex-default-row(center)
          background-color green

        & > footer
          flex-align-self(flex-end)
          flex-default-row()
          min-height 50px
          max-height 50px
          background-color red



      & > section
        flex-element(8 1 auto)
        flex-align-self(stretch)
        flex-default-column()
        padding 10px
        background-color grey

        & > header
          flex-element(1 0 auto)
          flex-align-self(stretch)
          max-height 64px
          background-color lightgrey

        & > section
          flex-element(1 0 auto)
          flex-align-self(stretch)
          flex-default-row()
          background-color lightyellow

          & > aside
            flex-element(2 1 auto)
            flex-align-self(stretch)
            flex-default-column()
            max-width 200px
            min-width 200px
            background-color pink

            &.aside-3
              flex-order(1)
            &.aside-4
              flex-order(3)

          & > section
            flex-element(8 1 auto)
            flex-order(2)
            flex-align-self(stretch)

        & > footer
          flex-element(0 1 auto)
          flex-order(4)
          flex-align-self(stretch)
          max-height 50px
          min-height 50px
          background-color red




